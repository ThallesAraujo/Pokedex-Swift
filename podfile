platform :ios, '14.5'
use_frameworks!

def common_pods
  pod 'Alamofire'
  pod 'RxAlamofire'
  pod 'Kingfisher', '~> 4.0'
  pod 'RxSwift', '6.2.0'
  pod 'RxCocoa', '6.2.0'
  pod 'RxDataSources'
  pod 'SDWebImageSVGCoder'
  pod 'UIImageColors'
  pod 'atlantis-proxyman'
end

target 'Pokedex-Swift' do
  common_pods
end

target 'Pokedex-Swift-UnitTests' do
  common_pods
end

target 'Pokedex-Swift-UITests' do
  common_pods
  pod 'KIF', :configurations => ['Debug']
  pod 'Nimble'
end
